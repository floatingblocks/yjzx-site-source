<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <%- include('../common/head.ejs', {page: page}); %>
    <link rel="stylesheet" href="/src/css/works.css">
    <title><%= page.title + " - " + config.siteName %></title>
</head>

<body>
    <main class="main">

    <%- include('../common/nav.ejs', {config: config}); %>

    <div class="main-container">
        <div class="guiding-area">
            <ul class="categories-tab-links">
                <% for (let i = 0; i < category.categories.length; i++) { 
                    let name = category.categories[i];
                %>
                    <li>
                        <a href="/categories/<%= name %>/" 
                            class="categories-tab-link <% if (category.active === name) { %> active <% } %>">
                            <%= name %>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
        <div class="content-area">
            <ul class="displayed-contents">
                <% for (let i = 0; i < category.items.length; i++) {
                        let now = category.items[i];
                    %>
                    <li class="displayed-content">
                        <a href="<%= now.link %>">
                            <h2 class="content-title"><%= now.title %></h2>
                            <p class="content-description"><%= now.description %></p>
                            <div class="content-infos">
                                <span class="content-categorie"><%= now.category %></span>
                                <span class="content-auther"><%= now.auther %></span>
                                <span class="content-date push"><%= now.date %></span>
                            </div>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>

    <%- include('../common/footer.ejs', {config: config}); %>
    
    </main>

</body>

</html>